<table>
    <thead>
        <tr>
            <th width="80%">商品信息</th>
            <th>价格</th>
            <th>数量</th>
        </tr>
    </thead>

    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= link_to(product.title,admin_products_path(product)) %></td>
            <td><%= product.price %></td>
            <td><%= product.quantity %></td>

        </tr>
        <% end %>
    </tbody>
</table>
